nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') #{title}
    .collapse.navbar-collapse
      if user
        ul.nav.navbar-nav
          //- li(class=url=='/'?'active':undefined)
          //-   a(href='/') Home
          li(class=url=='/api'?'active':undefined)
            a(href='/api')
              i.fa.fa-magic
              |  API Browser
          //- li(class=url=='/contact'?'active':undefined)
          //-   a(href='/contact')
          //-     i.fa.fa-envelope
          //-     |  Contact Us
        ul.nav.navbar-nav.navbar-right
          if user.type == 'admin'
            li.dropdown(class=url=='/administration'?'active':undefined)
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-cogs
                |  Administration&nbsp;
                b.caret
              ul.dropdown-menu
                li: a(href='/dashboard') Dashboard
                li: a(href='/accounts') Accounts
          li.dropdown(class=url=='/account'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img.profile-image(src='#{user.profile.picture}')
              else
                img.profile-image(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              b.caret
            ul.dropdown-menu
              li: a(href='/account') My Account
              li: a(href='/contact') Contact Us
              li: a(href='/logout') Logout
      else
        ul.nav.navbar-nav.navbar-right
          li(class=url=='/login'?'active':undefined)
            a(href='/login')
              i.fa.fa-user &nbsp;
              |  Sign In
